</nav>

<!-- Script para manejar el toggle del men煤 hamburguesa xd 锔-->
<script>
  // Esperar a que el DOM est茅 completamente cargado
  document.addEventListener("DOMContentLoaded", () => {
    // Obtener el bot贸n de toggle por su atributo data-collapse-toggle
    const toggleBtn = document.querySelector("[data-collapse-toggle]");
    // Obtener el men煤 m贸vil
    const mobileMenu = document.getElementById("mobile-menu");

    // Agregar event listener al bot贸n hamburguesa brooooow 
    toggleBtn.addEventListener("click", () => {
      // Alternar el men煤 m贸vil
      mobileMenu.classList.toggle("hidden");
      
      const isExpanded = !mobileMenu.classList.contains("hidden");
      toggleBtn.setAttribute("aria-expanded", isExpanded.toString());
    });
  });
</script>
