        <!-- Icono de hamburguesa   -->
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Men煤 m贸vil desplegable SOLO visible en m贸vil -->
  <div id="mobile-menu" class="hidden md:hidden bg-slate-800 border-t border-slate-700 shadow-lg">
    <div class="px-4 py-6 space-y-4">
      <!-- Enlaces del men煤 m贸vil -->
      <ul class="space-y-3">
        <li>
          <a href="#" class="block py-3 px-4 text-white hover:bg-slate-700 hover:text-blue-400 rounded-lg transition-colors duration-200 font-medium">
